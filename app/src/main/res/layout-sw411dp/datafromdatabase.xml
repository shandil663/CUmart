<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200sp"
    android:layout_height="250sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"


    >

    <ImageView
        android:id="@+id/productimg"
        android:layout_width="144dp"
        android:layout_height="113dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        app:srcCompat="@drawable/img_9" />

    <TextView
        android:id="@+id/itempricehere"
        android:layout_marginStart="20sp"
        android:layout_marginTop="135sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="Item price here" />

    <TextView
        android:id="@+id/itemnamehere"
        android:layout_marginStart="5sp"
        android:layout_marginTop="155sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textStyle="normal"
        android:text="Item name here" />
    <TextView
        android:id="@+id/locationhere"
        android:layout_marginStart="40sp"
        android:layout_marginTop="180sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textStyle="normal"
        android:text="Location" />


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|start"
        android:layout_marginTop="135sp"
        android:layout_marginStart="10sp"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        android:text="â‚¹" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="178sp"
        android:layout_width="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/round_share_location_24" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8sp"
        android:layout_gravity="center_horizontal|end"
        android:layout_marginTop="155sp"
        >

        <TextView
            android:id="@+id/whatto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:padding="5sp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="13sp"
            android:text="For sale" />
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>