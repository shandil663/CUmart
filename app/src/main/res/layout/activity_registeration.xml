<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Registeration">

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.49"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0"
      app:srcCompat="@drawable/img_10" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Sign up"
      android:textAlignment="center"
      android:textColor="@color/black"
      android:textSize="30sp"
      android:textStyle="bold|italic"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.339" />

  <androidx.cardview.widget.CardView
      android:id="@+id/regcard"
      android:layout_width="match_parent"
      android:layout_height="500dp"
      app:cardCornerRadius="60dp"
      app:cardElevation="60dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2"
      app:layout_constraintVertical_bias="1.0">

    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/customedit"
        android:drawableLeft="@drawable/person"
        android:drawablePadding="10sp"
        android:ems="10"
        android:hint="Fulll name"
        android:inputType="textPersonName"
        android:padding="10sp"
        android:textSize="20sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@drawable/customedit"
        android:drawableLeft="@drawable/twotone_contact_mail_24"
        android:drawablePadding="10sp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10sp"
        android:textSize="20sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:background="@drawable/customedit"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="10sp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10sp"
        android:textSize="20sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:background="@drawable/customedit"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="10sp"
        android:ems="10"
        android:hint="Mobile No."
        android:inputType="number"
        android:padding="10sp"
        android:textSize="20sp"
        android:textStyle="normal" />


    <Button
        android:id="@+id/regbtn"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="260dp"
        android:backgroundTint="@color/text"
        android:text="Continue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="320dp"
        android:layout_marginRight="30dp"
        android:textColor="@android:color/darker_gray"
        android:text="Already have account?" />

    <TextView
        android:id="@+id/loginpageopen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="320dp"
        android:text="Sign in"
        android:textColor="@color/text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="375dp"
        android:textColor="@android:color/darker_gray"
        android:text="________Or sign up with________"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="430dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="1dp">

      <ImageView
          android:id="@+id/imageView5"
          android:layout_width="140dp"
          android:layout_height="40dp"
          android:src="@drawable/img_8" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="430dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="1dp">


      <ImageView
          android:id="@+id/imageView4"
          android:layout_width="140dp"
          android:layout_height="40dp"
          android:src="@drawable/img_7" />
    </androidx.cardview.widget.CardView>

  </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>