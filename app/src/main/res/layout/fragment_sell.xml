<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SellFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Provide your item details here"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="10sp"
        />

    <androidx.cardview.widget.CardView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80sp"
        android:layout_width="370sp"
        app:cardCornerRadius="20sp"
        app:cardElevation="5sp"
        android:layout_height="530sp" >

        <ImageView
            android:id="@+id/selectitem"
            android:layout_width="246dp"
            android:layout_height="237dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:src="@drawable/img_5" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_marginEnd="10sp"
            android:background="@drawable/customedit"
            android:layout_marginStart="10sp"
            android:layout_marginTop="260sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Title of your item"
            android:maxLength="17"
            android:textAlignment="center"
            android:padding="10sp"
            android:inputType="text" />
        <EditText
            android:id="@+id/nxttxt"
            android:background="@drawable/customedit"
            android:layout_marginStart="10sp"
            android:layout_marginTop="320sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:hint="Add discription for your item"
            android:textAlignment="center"
            android:padding="10sp"
            android:inputType="text" />
        <EditText
            android:id="@+id/nxttxt1"
            android:background="@drawable/customedit"
            android:layout_marginStart="10sp"
            android:layout_marginTop="380sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Price for your item"
            android:layout_marginEnd="10sp"
            android:maxLength="10"
            android:textAlignment="center"
            android:padding="10sp"
            android:inputType="number" />
        <EditText
            android:id="@+id/nxttxt2"
            android:background="@drawable/customedit"
            android:layout_marginStart="10sp"
            android:layout_marginTop="440sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Meetup Point within University"
            android:textAlignment="center"
            android:layout_marginEnd="10sp"
            android:padding="10sp"
            android:inputType="text" />

        <ToggleButton
            android:id="@+id/tg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/customedit"
            android:layout_gravity="center_horizontal|end"
            android:layout_marginTop="380sp"
            android:layout_marginEnd="80sp"
            android:text="ToggleButton"
            android:textOff="For sale"
            android:textAllCaps="false"
            android:textOn="To rent"

            />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/buttonsell"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Sell Now"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="630sp"


        />

</FrameLayout>