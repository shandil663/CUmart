<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.cardview.widget.CardView
        android:layout_width="150sp"
        android:layout_height="150sp"
        app:cardCornerRadius="50sp"
        android:layout_margin="20sp"
        app:cardElevation="5sp"
        >

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="120sp"
            android:layout_gravity="center"
            android:layout_height="120sp"
            android:src="@drawable/img_14" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="210sp"
        android:layout_marginTop="60sp"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/emailtxthere"
        android:layout_marginTop="90sp"
        android:layout_marginStart="210sp"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/grey"
        android:layout_height="wrap_content"
       />

    <androidx.cardview.widget.CardView
        android:layout_width="150sp"
        android:layout_height="80sp"
        android:layout_gravity="center_horizontal|start"
        android:layout_marginTop="220sp"
        android:layout_marginStart="30sp"
        app:cardCornerRadius="30sp"
        app:cardElevation="5sp"
     >

        <ImageView
            android:id="@+id/lochere"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="center|start"
            android:layout_marginStart="10sp"
            app:srcCompat="@drawable/img_21" />

        <TextView
            android:id="@+id/Myfav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="22sp"
            android:maxEms="5"
            android:text="Favourites"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150sp"
        android:layout_height="80sp"
        android:layout_gravity="center_horizontal|start"
        android:layout_marginTop="320sp"
        android:layout_marginStart="30sp"
        app:cardCornerRadius="30sp"
        app:cardElevation="5sp"
        >

        <ImageView
            android:id="@+id/myad"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="center|start"
            android:layout_marginStart="10sp"
            app:srcCompat="@drawable/img_25" />

        <TextView
            android:id="@+id/MyAD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="35sp"
            android:maxEms="5"
            android:text="My Ads"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/logoutcard"
        android:layout_width="150sp"
        android:layout_height="80sp"
        android:layout_gravity="center_horizontal|end"
        android:layout_marginTop="220sp"
        android:layout_marginEnd="30sp"
        app:cardCornerRadius="30sp"
        app:cardElevation="5sp"
        >

        <ImageView
            android:id="@+id/log"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center|start"
            android:layout_marginStart="15sp"
            app:srcCompat="@drawable/img_24" />

        <TextView
            android:id="@+id/out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="40sp"
            android:maxEms="5"
            android:text="Logout"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150sp"
        android:layout_height="80sp"
        android:layout_gravity="center_horizontal|end"
        android:layout_marginTop="320sp"
        android:layout_marginEnd="30sp"
        app:cardCornerRadius="30sp"
        app:cardElevation="5sp"
        >

        <ImageView
            android:id="@+id/set"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_gravity="center|start"
            android:layout_marginStart="15sp"
            app:srcCompat="@drawable/img_26" />

        <TextView
            android:id="@+id/tings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="40sp"
            android:maxEms="5"
            android:text="Settings"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/mobilehere"
        android:layout_marginTop="115sp"
        android:layout_marginStart="210sp"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/grey"
        android:layout_height="wrap_content"
         />
</FrameLayout>